generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model word {
  id          Int     @id @default(autoincrement())
  word        String  @db.VarChar(6)
  description String  @db.Text
  hint        String? @db.Text
}
